{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "git-submodules": {
    "enabled": true
  },
  "cloneSubmodules": true,
  "packageRules": [
    {
      "matchPackageNames": ["@parcel/**"],
      "groupName": "parcel packages"
    }
  ]
}
